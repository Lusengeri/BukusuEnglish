<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- The color of the app bar -->
        <item name="colorPrimary">@color/primaryLight</item>
        <!-- The color of the band above the app-->
        <item name="colorPrimaryDark">@android:color/white</item>
        <!-- The color of the blinking cursor when in searchView -->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowLightStatusBar">@android:color/black</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- The color of the app bar -->
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorPrimaryDark">@color/secondaryLight</item>
        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="android:editTextColor">@color/secondaryLight</item>
        <item name="android:textColorPrimary">@color/secondaryLight</item>
        <item name="android:textColorSecondary">@color/secondaryLight</item>
        <item name="android:textColor">@color/primaryLight</item>
        <item name="android:textColorHint">@color/hintColorLight</item>
        <item name="android:textColorHighlight">@color/hintColorDark</item>
        <item name="android:windowLightStatusBar">@android:color/black</item>
        <!--item name="colorOnPrimary">@color/brightWhite</item-->


        <!-- The color of the blinking cursor when in searchView -->
        <!--item name="colorAccent">@android:color/white</item-->
    </style>
</resources>